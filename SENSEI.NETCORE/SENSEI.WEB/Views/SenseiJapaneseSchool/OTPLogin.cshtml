@{
    Layout = "~/Views/Shared/_AuthLayout.cshtml";
    ViewData["Title"] = "OTP Sign In";
}

@* FontAwesome for Premium Icons *@
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css">
<link href="https://fonts.googleapis.com/css2?family=Noto+Serif+JP:wght@900&family=Inter:wght@400;600;700;900&display=swap" rel="stylesheet">

<style>
    :root {
        --primary: #ff5a5f;
        --primary-dark: #d93d42;
        --accent-sakura: #ffeff0;
        --text-main: #1a1a1a;
        --text-muted: #555555;
        --glass-bg: rgba(255, 255, 255, 0.85);
        --glass-border: rgba(255, 90, 95, 0.15);
    }

    body {
        margin: 0;
        padding: 0;
        min-height: 100vh;
        background: linear-gradient(to bottom, #fffbfb 0%, #fff5f5 100%);
        font-family: 'Inter', -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, sans-serif;
        overflow-x: hidden;
        position: relative;
    }

    /* Homepage Background Pattern */
    body::before {
        content: "";
        position: fixed;
        top: 0;
        left: 0;
        width: 100vw;
        height: 100vh;
        z-index: -1;
        pointer-events: none;
        background-image: url('../theme/v1/img/photos/sakura.png'), url('../theme/v1/img/photos/sakura.png');
        background-repeat: no-repeat, no-repeat;
        background-position: -5% -5%, 105% 60%;
        background-size: 500px auto, 600px auto;
        opacity: 0.12;
        mix-blend-mode: multiply;
    }

    /* Falling Sakura Animation Container */
    .sakura-container {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        pointer-events: none;
        z-index: 0;
    }

    .petal {
        position: absolute;
        background-color: #ffb7c5;
        border-radius: 150% 0 150% 0;
        opacity: 0.6;
        z-index: 0;
    }

    /* Navigation Header */
    .nav-header {
        position: fixed;
        top: 0;
        left: 0;
        width: 100%;
        padding: 1.2rem 3.5rem;
        display: flex;
        align-items: center;
        justify-content: space-between;
        z-index: 1000;
        background: rgba(255, 255, 255, 0.7);
        backdrop-filter: blur(15px);
        border-bottom: 1px solid rgba(255, 90, 95, 0.05);
    }

    .nav-brand {
        display: flex;
        align-items: center;
        gap: 12px;
        text-decoration: none;
    }

    .nav-brand span {
        font-weight: 900;
        font-size: 1.5rem;
        color: #ff0000;
        letter-spacing: -0.04em;
    }

    .nav-links {
        display: flex;
        gap: 2rem;
        align-items: center;
    }

    .nav-links a {
        text-decoration: none;
        color: var(--text-main);
        font-weight: 600;
        font-size: 0.95rem;
        transition: color 0.2s;
        position: relative;
    }

    .nav-links a:hover {
        color: var(--primary);
    }

    .nav-links a::after {
        content: "";
        position: absolute;
        bottom: -4px;
        left: 0;
        width: 0;
        height: 2px;
        background: var(--primary);
        transition: width 0.2s;
    }

    .nav-links a:hover::after {
        width: 100%;
    }

    .login-wrapper {
        width: 100%;
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        padding: 80px 20px 40px;
        position: relative;
        z-index: 10;
        box-sizing: border-box;
    }

    .login-card {
        background: var(--glass-bg);
        backdrop-filter: blur(25px);
        -webkit-backdrop-filter: blur(25px);
        border: 1px solid var(--glass-border);
        border-radius: 32px;
        padding: 50px 45px;
        width: 100%;
        max-width: 460px;
        box-shadow: 0 40px 100px rgba(255, 90, 95, 0.12);
        text-align: center;
    }

    .logo-box {
        margin-bottom: 35px;
    }

    .brand-logo {
        width: 110px;
        height: 110px;
        object-fit: contain;
    }

    .login-title {
        font-weight: 900;
        font-size: 2.3rem;
        color: var(--text-main);
        margin-bottom: 10px;
        letter-spacing: -1px;
    }

    .login-subtitle {
        color: var(--text-muted);
        font-size: 1.1rem;
        margin-bottom: 40px;
    }

    /* Form Styles */
    .form-label {
        display: block;
        text-align: left;
        font-weight: 700;
        color: var(--text-main);
        margin-bottom: 8px;
        font-size: 0.95rem;
    }

    .input-group {
        position: relative;
        margin-bottom: 5px;
    }

    .input-group-text {
        background: rgba(255, 90, 95, 0.05);
        border: 1px solid #ffe0e0;
        border-right: none;
        border-radius: 12px 0 0 12px;
        padding: 0 15px;
        font-weight: 700;
        color: var(--primary);
        display: flex;
        align-items: center;
    }

    .form-control-lg {
        height: 56px !important;
        border-radius: 12px !important;
        border: 1px solid #ffe0e0 !important;
        padding: 10px 20px !important;
        font-weight: 600 !important;
        font-size: 1.1rem !important;
        transition: all 0.2s ease;
        width: 100%;
    }

    .input-group .form-control-lg {
        border-top-left-radius: 0 !important;
        border-bottom-left-radius: 0 !important;
    }

    .form-control-lg:focus {
        border-color: var(--primary) !important;
        box-shadow: 0 0 0 4px rgba(255, 90, 95, 0.08) !important;
        background: #fff !important;
    }

    .btn-primary-premium {
        width: 100%;
        padding: 16px 30px;
        border-radius: 16px;
        font-weight: 700;
        font-size: 1.1rem;
        background: var(--primary);
        color: white;
        border: none;
        cursor: pointer;
        box-shadow: 0 12px 28px rgba(255, 90, 95, 0.3);
        transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 12px;
        margin-top: 25px;
    }

    .btn-primary-premium:hover {
        background: var(--primary-dark);
        transform: translateY(-4px);
        box-shadow: 0 18px 40px rgba(255, 90, 95, 0.4);
    }

    .register-prompt {
        margin-top: 40px;
        padding-top: 30px;
        border-top: 1px solid rgba(255, 90, 95, 0.1);
        font-size: 1.05rem;
        color: var(--text-muted);
    }

    .btn-link-premium {
        color: var(--primary);
        text-decoration: none !important;
        font-weight: 800;
        margin-left: 8px;
    }

    .btn-link-premium:hover {
        text-decoration: underline !important;
    }

    /* Japanese Background Watermark */
    .jp-watermark {
        position: absolute;
        font-family: "Noto Serif JP", serif;
        font-weight: 900;
        color: var(--primary);
        opacity: 0.03;
        font-size: 15rem;
        z-index: -1;
        pointer-events: none;
        white-space: nowrap;
        user-select: none;
    }

    .jp-pos-1 { top: 10%; right: -5%; transform: rotate(15deg); }
    .jp-pos-2 { bottom: 10%; left: -5%; transform: rotate(-15deg); }

    @@media (max-width: 768px) {
        .nav-links { display: none; }
        .nav-header { padding: 1rem 1.5rem; }
        .login-card { padding: 40px 30px; }
    }
</style>

@* Navigation Header *@
