@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const target = document.querySelector('.typewriter-text');
            const cursor = document.querySelector('.typewriter-cursor');
            if (!target) return;

            const text = target.getAttribute('data-text');
            let index = 0;

            function type() {
                if (index < text.length) {
                    target.textContent += text.charAt(index);
                    
                    // Only spawn sparkle on non-space characters for cleaner look
                    if (text.charAt(index) !== ' ') {
                        spawnSparkle();
                    }

                    index++;
                    setTimeout(type, Math.random() * 80 + 40); 
                } else {
                    // Stay: Keep cursor blinking or hide it? 
                    // Let's keep it for a bit then fade out
                    setTimeout(() => {
                        cursor.style.transition = 'opacity 1s ease';
                        cursor.style.opacity = '0';
                    }, 2000);
                }
            }

            function spawnSparkle() {
                const rect = target.getBoundingClientRect();
                const sparkle = document.createElement('div');
                sparkle.className = 'sakura-sparkle';
                
                // Position at the "end" of the current text
                sparkle.style.left = rect.right + 'px';
                sparkle.style.top = (rect.top + rect.height / 2) + 'px';
                
                // Random drift direction
                const driftX = (Math.random() - 0.5) * 40;
                const driftY = -20 - Math.random() * 30;
                sparkle.style.setProperty('--drift-x', `${driftX}px`);
                sparkle.style.setProperty('--drift-y', `${driftY}px`);
                
                // Random size
                const size = Math.random() * 6 + 4;
                sparkle.style.width = size + 'px';
                sparkle.style.height = (size * 0.8) + 'px';

                document.body.appendChild(sparkle);
                
                // Use a more dynamic animation via JS for true randomness
                sparkle.animate([
                    { transform: 'translate(0, 0) rotate(0deg) scale(1)', opacity: 1 },
                    { transform: `translate(${driftX}px, ${driftY}px) rotate(${Math.random() * 360}deg) scale(0)`, opacity: 0 }
                ], {
                    duration: 800 + Math.random() * 400,
                    easing: 'ease-out',
                    fill: 'forwards'
                });

                setTimeout(() => sparkle.remove(), 1200);
            }

            // Start typing after initial fade-in
            setTimeout(type, 800);
        });
    </script>
