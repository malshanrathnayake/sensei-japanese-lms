
@{
    ViewData["Title"] = "Home";
}
<!-- HERO -->
<section class="hero" id="top">
    <div class="hero-left fade-up">
        <div class="hero-badge">Trusted by 500+ students • New groups starting monthly</div>

        <h1 class="hero-title">Learn Japanese Easily Online</h1>
        <p class="hero-subtitle">
            Join our interactive courses and start speaking Japanese with
            confidence from day one.
        </p>

        <div class="hero-cta">
            <a href="#contact" class="btn-primary">Get Started</a>
        </div>

        <ul class="hero-highlights" aria-hidden="true">
            <li>Small groups • Live tutors</li>
            <li>Flexible schedules</li>
            <li>JLPT focused paths</li>
        </ul>
    </div>

    <div class="hero-illustration" aria-hidden="true">
        <!-- Replaced decorative UI with Sensei image and soft background -->
        <div class="hero-sakura-bg"></div>
        <img src="~/theme/v1/img/photos/Sensei.png" alt="Sensei Instructor" class="hero-sensei-img" />
    </div>
</section>

<!-- FEATURES -->
<section class="features" aria-label="Key features">
    <article class="feature-card">
        <div class="feature-icon">▶</div>
        <h3 class="feature-title">Live &amp; Recorded Lessons</h3>
        <p class="feature-text">
            Study with real teachers or catch up with high-quality recordings at
            your own pace.
        </p>
    </article>

    <article class="feature-card">
        <div class="feature-icon">🤖</div>
        <h3 class="feature-title">Practice with AI Tools</h3>
        <p class="feature-text">
            Chat, quiz and role-play in Japanese using integrated AI practice
            partners.
        </p>
    </article>

    <article class="feature-card">
        <div class="feature-icon">✔</div>
        <h3 class="feature-title">Track Your Progress</h3>
        <p class="feature-text">
            See your streaks, review history and vocabulary growth in one simple
            dashboard.
        </p>
    </article>
</section>

<!-- COURSES SECTION -->
<section id="courses">
    <h2>Courses for Every Level</h2>
    <p>
        Whether you are just getting started or preparing for JLPT exams, we
        have a structured path designed by experienced native-speaking teachers.
    </p>

    <div class="course-grid">
        <article class="course-card">
            <div class="course-level">Beginner</div>
            <h3>Japanese Foundations</h3>
            <p>
                Learn hiragana, katakana, basic kanji and everyday phrases for
                travel and conversation.
            </p>
            <p class="course-meta">8 weeks · 2 live classes per week</p>
        </article>

        <article class="course-card">
            <div class="course-level">Intermediate</div>
            <h3>Conversation &amp; Culture</h3>
            <p>
                Improve listening and speaking skills with real-life scenarios and
                cultural insights.
            </p>
            <p class="course-meta">10 weeks · Live speaking labs</p>
        </article>

        <article class="course-card">
            <div class="course-level">Exam</div>
            <h3>JLPT Prep Programs</h3>
            <p>
                Targeted practice, mock tests and feedback to reach your JLPT N5–N3
                goals.
            </p>
            <p class="course-meta">Flexible · Self-paced + live review</p>
        </article>
    </div>
</section>

<!-- ABOUT SECTION -->
<section id="about" class="about-section">
    <div class="about-header">
        <h2>About Sensei Japanese Center</h2>
        <p>
            Sensei Japanese Center is an online language school dedicated to making
            Japanese lessons friendly, flexible and effective for learners around
            the world.
        </p>
    </div>

    <div class="about-grid">
        <!-- Left: Core Value -->
        <div class="about-card-wrapper">
            <div class="about-highlight-card">
                <h3>🌸 Learn from real Japanese tutors</h3>
                <p>
                    Our teachers bring years of classroom and online experience,
                    combining clear explanations with fun activities so you stay
                    motivated.
                </p>
                <div class="about-focus-box">
                    We focus on real communication: speaking, listening, and expressing
                    yourself naturally in everyday situations.
                </div>
            </div>
        </div>

        <!-- Right: Stats & Benefits -->
        <div class="about-stats-benefits">
            <!-- Stats Row -->
            <div class="stats-grid">
                <div class="about-stat-item">
                    <div class="stat-number">10+</div>
                    <div class="stat-label">Years Teaching</div>
                </div>
                <div class="about-stat-item">
                    <div class="stat-number">25+</div>
                    <div class="stat-label">Countries</div>
                </div>
            </div>
            
            <!-- Why Love Us -->
            <div class="benefits-card">
                <h3>Why students love us</h3>
                <ul class="benefits-list">
                    <li><span class="check">✔</span> Flexible schedules</li>
                    <li><span class="check">✔</span> Warm community</li>
                    <li><span class="check">✔</span> Clear roadmap from beginner to advanced</li>
                    <li><span class="check">✔</span> Small, interactive classes</li>
                </ul>
                <div class="benefits-footer">
                    <p>
                        Join trial lessons, meet your teacher, and see how our platform helps you build a daily Japanese habit.
                    </p>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- CONTACT / TRIAL LESSON -->
<section id="contact" class="contact-section">
    <div class="contact-header">
        <h2>Start Your Japanese Journey 🌸</h2>
        <p>
            Ready to speak confidently? Book a free trial lesson or ask us anything.
            We will get back to you within 24 hours.
        </p>
    </div>

    <div class="contact-form-container">
        <form>
            <div class="form-row">
                <div class="form-group">
                    <label for="name">Name</label>
                    <input id="name" type="text" placeholder="Your name" />
                </div>
                <div class="form-group">
                    <label for="email">Email</label>
                    <input id="email" type="email" placeholder="you@example.com" />
                </div>
            </div>

            <div class="form-group">
                <label for="message">Message</label>
                <textarea id="message" placeholder="I'm interested in..."></textarea>
            </div>

            <button type="button" class="btn-primary full-width">Send Message</button>
        </form>
    </div>
</section>

<style>
    /* Section Headers */
    .about-header, .contact-header {
        text-align: center;
        max-width: 800px;
        margin: 0 auto 3rem;
    }

    /* About Section Styles */
    .about-grid {
        display: grid;
        grid-template-columns: 1.2fr 0.8fr;
        gap: 2rem;
        align-items: start;
    }

    .about-highlight-card {
        background: #fff;
        border: 1px solid var(--border-soft);
        box-shadow: 0 4px 20px rgba(0,0,0,0.05);
        padding: 2.5rem;
        border-radius: 12px;
    }

    .about-highlight-card h3 {
        color: var(--primary);
        font-size: 1.5rem;
        margin-bottom: 1rem;
    }

    .about-focus-box {
        background: var(--accent-sakura);
        padding: 1.2rem;
        border-radius: 8px;
        color: var(--primary-dark);
        font-weight: 600;
        margin-top: 1.5rem;
    }

    .about-stats-benefits {
        display: flex;
        flex-direction: column;
        gap: 1.5rem;
    }

    .stats-grid {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 1rem;
    }

    .about-stat-item {
        text-align: center;
        padding: 1.5rem;
        background: #fff;
        border: 1px solid var(--border-soft);
        border-radius: 12px;
    }

    .stat-number {
        font-size: 2.2rem;
        font-weight: 900;
        color: var(--primary);
        line-height: 1;
        margin-bottom: 0.2rem;
    }

    .stat-label {
        font-size: 0.8rem;
        color: var(--text-muted);
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 0.5px;
    }

    .benefits-card {
        background: #fff;
        border: 1px solid var(--border-soft);
        padding: 2rem;
        border-radius: 12px;
        box-shadow: 0 4px 20px rgba(0,0,0,0.05);
    }

    .benefits-card h3 {
        font-size: 1.2rem;
        margin-bottom: 1.2rem;
    }

    .benefits-list {
        list-style: none;
        padding: 0;
        display: grid;
        gap: 0.8rem;
    }

    .benefits-list li {
        display: flex;
        gap: 0.8rem;
        align-items: center;
        font-size: 0.95rem;
        color: var(--text-muted);
    }

    .benefits-list .check {
        color: var(--primary);
        font-weight: bold;
    }

    .benefits-footer {
        margin-top: 1.5rem;
        padding-top: 1rem;
        border-top: 1px dashed var(--border-soft);
        font-size: 0.9rem;
        color: var(--text-muted);
    }

    /* Contact Section Styles */
    .contact-form-container {
        max-width: 650px;
        margin: 0 auto;
        background: rgba(255,255,255,0.9);
        backdrop-filter: blur(12px);
        border-radius: 20px;
        padding: 3rem;
        border: 1px solid rgba(255,90,95,0.15);
        box-shadow: 0 20px 50px rgba(255,90,95,0.1);
    }

    .form-row {
        display: grid;
        grid-template-columns: 1fr 1fr;
        gap: 1.5rem;
        margin-bottom: 1.5rem;
    }

    .form-group {
        margin-bottom: 1.2rem;
    }

    .form-group label {
        display: block;
        font-weight: 700;
        font-size: 0.9rem;
        margin-bottom: 0.5rem;
        color: var(--text-main);
    }

    .form-group input, .form-group textarea {
        width: 100%;
        padding: 0.8rem 1rem;
        border-radius: 8px;
        border: 1px solid #ffe0e0;
        background: #fff;
        font-size: 1rem;
        transition: border-color 0.2s;
    }

    .form-group input:focus, .form-group textarea:focus {
        border-color: var(--primary);
        outline: none;
    }

    .form-group textarea {
        min-height: 150px;
        resize: vertical;
    }

    .full-width {
        width: 100%;
        justify-content: center;
    }

    /* Responsive adjustments for Index components */
    @@media (max-width: 880px) {
        .about-grid {
            grid-template-columns: 1fr;
        }
    }

    @@media (max-width: 600px) {
        .form-row {
            grid-template-columns: 1fr;
            gap: 0;
        }
        
        .contact-form-container {
            padding: 1.5rem;
        }

        .about-highlight-card {
            padding: 1.5rem;
        }
        
        .stat-number {
            font-size: 1.8rem;
        }
    }

    /* Local hero tweaks (keeps CSS scoped to this view) */
    .hero-badge {
        display: inline-block;
        background: rgba(255,90,95,0.12);
        color: var(--primary);
        padding: 0.25rem 0.6rem;
        border-radius: 999px;
        font-weight: 700;
        font-size: 0.85rem;
        margin-bottom: 0.8rem;
    }

    .hero-cta {
        margin-top: 1.1rem;
        display: flex;
        gap: 0.8rem;
        align-items: center;
    }

    .btn-ghost {
        padding: 0.7rem 1.2rem;
        border-radius: 999px;
        border: 1px solid rgba(34,34,34,0.06);
        background: transparent;
        color: var(--text-main);
        font-weight: 600;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
    }

    .hero-highlights {
        margin-top: 1rem;
        list-style: none;
        display: flex;
        gap: 1rem;
        color: var(--text-muted);
        font-size: 0.92rem;
    }

    /* Slight elevation for the hero CTA on hover */
    .btn-primary { transition: transform .08s ease, box-shadow .12s ease; }
    .btn-primary:hover { transform: translateY(-2px); box-shadow: 0 18px 34px rgba(255,90,95,0.18); }

    /* DECORATIVE JAPANESE SENTENCE */
    /* DECORATIVE JAPANESE SENTENCE */
    .jp-brand-sentence {
        position: absolute;
        top: 8rem; 
        left: 0;
        width: 100%;
        text-align: center;
        font-family: "Noto Serif JP", serif;
        font-weight: 900;
        font-size: clamp(1.4rem, 6vw, 3.5rem); 
        color: var(--primary);
        opacity: 0.25; /* Increased for clarity */
        z-index: 0;
        pointer-events: none;
        letter-spacing: 0.5em; 
        white-space: nowrap;
        text-transform: uppercase;
    }

    /* LARGE BACKGROUND KANJI WATERMARKS */
    .jp-watermark {
        position: absolute;
        font-family: "Noto Serif JP", serif;
        font-weight: 900;
        color: var(--primary);
        opacity: 0.05; /* Light but visible */
        font-size: clamp(10rem, 25vw, 20rem);
        z-index: -1;
        pointer-events: none;
        white-space: nowrap;
        user-select: none;
    }

    .jp-pos-right { top: 15%; right: -5%; transform: rotate(15deg); }
    .jp-pos-left { top: 55%; left: -5%; transform: rotate(-15deg); }

    @media (max-width: 640px) {
        .jp-brand-sentence {
            top: 11.5rem; /* Space for stacked header */
            opacity: 0.35; /* Stronger visibility on mobile as requested */
            letter-spacing: 0.15em;
            font-size: 1.25rem;
        }
        
        .jp-watermark {
            opacity: 0.08; /* Slightly stronger on mobile */
            font-size: 12rem;
        }

        .jp-pos-right { top: 20%; right: -10%; }
        .jp-pos-left { top: 70%; left: -10%; }
    }
</style>

<!-- DECORATIVE ELEMENTS -->
<div class="jp-brand-sentence">先生 日本語 センター</div> 
<div class="jp-watermark jp-pos-right">先生</div>
<div class="jp-watermark jp-pos-left">日本語</div>