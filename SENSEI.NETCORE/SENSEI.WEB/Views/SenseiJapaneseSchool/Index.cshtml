<!-- CONTACT / TRIAL LESSON (Sakura Theme Redesign) -->
<section id="contact" style="position:relative; z-index:1;">
    <div style="text-align:center; margin-bottom: 2.5rem;">
        <h2 style="font-size:2rem; font-weight:800; color:var(--text-main);">Start Your Japanese Journey 🌸</h2>
        <p style="color:var(--text-muted); max-width:600px; margin:0 auto;">
            Ready to speak confidently? Book a free trial lesson or ask us anything.
            We will get back to you within 24 hours.
        </p>
    </div>

    <div style="max-width: 600px; margin: 0 auto; background: rgba(255,255,255,0.85); backdrop-filter: blur(12px); border-radius: 20px; padding: 2.5rem; border: 1px solid rgba(255,90,95,0.15); box-shadow: 0 20px 50px rgba(255,90,95,0.1);">
        <form>
            <div style="display:grid; grid-template-columns: 1fr 1fr; gap:1.2rem; margin-bottom:1.2rem;">
                <div>
                    <label for="name" style="display:block; font-weight:700; font-size:0.9rem; margin-bottom:0.4rem; color:var(--text-main);">Name</label>
                    <input id="name" type="text" placeholder="Your name" style="width:100%; padding:0.8rem; border-radius:8px; border:1px solid #ffe0e0; background:#fff;" />
                </div>
                <div>
                    <label for="email" style="display:block; font-weight:700; font-size:0.9rem; margin-bottom:0.4rem; color:var(--text-main);">Email</label>
                    <input id="email" type="email" placeholder="you@example.com" style="width:100%; padding:0.8rem; border-radius:8px; border:1px solid #ffe0e0; background:#fff;" />
                </div>
            </div>

            <div style="margin-bottom:1.5rem;">
                <label for="message" style="display:block; font-weight:700; font-size:0.9rem; margin-bottom:0.4rem; color:var(--text-main);">Message</label>
                <textarea id="message" placeholder="I'm interested in..." style="width:100%; padding:0.8rem; border-radius:8px; border:1px solid #ffe0e0; background:#fff; min-height:120px; resize:vertical;"></textarea>
            </div>

            <button type="button" class="btn-primary" style="width:100%; justify-content:center; font-size:1.1rem;">Send Message</button>
        </form>
    </div>
</section>

<style>
    /* Local hero tweaks (keeps CSS scoped to this view) */
    .hero-badge {
        display: inline-block;
        background: rgba(255,90,95,0.12);
        color: var(--primary);
        padding: 0.25rem 0.6rem;
        border-radius: 999px;
        font-weight: 700;
        font-size: 0.85rem;
        margin-bottom: 0.8rem;
    }

    .hero-cta {
        margin-top: 1.1rem;
        display: flex;
        gap: 0.8rem;
        align-items: center;
    }

    .btn-ghost {
        padding: 0.7rem 1.2rem;
        border-radius: 999px;
        border: 1px solid rgba(34,34,34,0.06);
        background: transparent;
        color: var(--text-main);
        font-weight: 600;
        text-decoration: none;
        display: inline-flex;
        align-items: center;
    }

    .hero-highlights {
        margin-top: 1rem;
        list-style: none;
        display: flex;
        gap: 1rem;
        color: var(--text-muted);
        font-size: 0.92rem;
    }



    /* Slight elevation for the hero CTA on hover */
    .btn-primary { transition: transform .08s ease, box-shadow .12s ease; }
    .btn-primary:hover { transform: translateY(-2px); box-shadow: 0 18px 34px rgba(255,90,95,0.18); }

    /* DECORATIVE JAPANESE SENTENCE */
    .jp-brand-sentence {
        position: absolute;
        top: 6.5rem;
        left: 0;
        width: 100%;
        text-align: center;
        font-family: "Noto Serif JP", serif;
        font-weight: 800;
        font-size: clamp(1rem, 4vw, 2.5rem); /* Smaller as requested */
        color: var(--primary);
        opacity: 0.9; /* Highly visible */
        z-index: 0;
        pointer-events: none;
        letter-spacing: 0.3em;
        white-space: nowrap;
    }
</style>

