<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <title>Sensei Japanese Center | @ViewData["Title"]</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    
    <link rel="stylesheet" href="~/css/public-web.css" />

    <style>
        /* Header / brand adjustments: make logo smaller and brand text more visible */
        .brand-logo {
            width: 32px;
            height: 32px;
            border-radius: 6px;
            object-fit: cover;
            display: block;
        }

        /* clickable link wrapper (keeps image inline) */
        .brand-link {
            display: inline-block;
            line-height: 0;
        }

        /* adjust brand layout to align nicely with logo */
        .brand {
            display: flex;
            align-items: center;
            gap: 0.6rem;
        }

        .brand-text {
            display: flex;
            flex-direction: column;
            line-height: 1;
        }

        .brand-text span:first-child {
            font-weight: 800;
            font-size: 1.12rem;
            color: var(--text-main);
            letter-spacing: 0.01em;
        }

        .brand-text span:last-child {
            font-size: 0.9rem;
            color: #333333;
            font-weight: 600;
        }
    </style>
</head>
<body>
    <!-- HEADER / NAV -->
    <header>
        <div class="nav">
            <div class="brand">
                <a href="~/" class="brand-link">
                    <img src="~/theme/v1/img/photos/logo.PNG" alt="Sensei Japanese Center" class="brand-logo" />
                </a>
                <div class="brand-text">
                    <span>Sensei</span>
                    <span>Japanese Center</span>
                </div>
            </div>
            <nav class="nav-links">
                <a href="#courses">Courses</a>
                <a href="#about">About</a>
                <a href="#contact">Contact</a>
                <button id="loginbtn" class="btn-login" href="~/SenseiJapaneseSchool/Login">Login</button>
            </nav>
        </div>
    </header>

    <main>

        @RenderBody()

        <!-- TEMPLE STRIP + FOOTER -->
        <div class="temple-strip">
            <div class="temple-graphic" aria-hidden="true">
                <div class="ground"></div>
                <div class="temple-row">
                    <div class="temple"></div>
                    <div class="temple temple--center"></div>
                    <div class="temple"></div>
                </div>
            </div>
            <footer>
                © <span id="year">2025</span> Sensei Japanese Center. All rights reserved.
            </footer>
        </div>
    </main>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>

    <script>
        // update year without needing external scripts
        document.getElementById("year").textContent = new Date().getFullYear().toString();
        
        $("#loginbtn").click(function() {
            window.location.href = "/SenseiJapaneseSchool/Login";
        });

    </script>
    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>