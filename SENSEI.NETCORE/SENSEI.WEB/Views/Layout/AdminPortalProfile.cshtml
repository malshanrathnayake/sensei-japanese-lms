@{
	Layout = null;
	var userDisplayName = Context.Session.GetString("DisplayName") ?? "User";
	var userProfileImage = Context.Session.GetString("ProfileImage") ?? "/theme/v1/img/avatars/placeholder_1.jpeg";
}

<li class="nav-item dropdown">
	<a class="nav-icon dropdown-toggle d-inline-block d-sm-none" href="#" data-bs-toggle="dropdown">
		<img src="@Url.Content(userProfileImage)" class="avatar img-fluid rounded-circle" alt="@userDisplayName" style="border: 1px solid var(--primary); width: 28px; height: 28px; object-fit: cover;" onerror="this.src='@Url.Content("/theme/v1/img/avatars/placeholder_1.jpeg")'" />
	</a>

    <a class="nav-link dropdown-toggle d-none d-sm-inline-block" href="#" data-bs-toggle="dropdown">
        <img src="@Url.Content(userProfileImage)" class="avatar img-fluid rounded-circle me-1" alt="@userDisplayName" style="border: 2px solid var(--primary); width: 32px; height: 32px; object-fit: cover;" onerror="this.src='@Url.Content("/theme/v1/img/avatars/placeholder_1.jpeg")'" />
        <span class="text-dark fw-bold">@userDisplayName</span>
    </a>
	<div class="dropdown-menu dropdown-menu-end">
		<a class="dropdown-item" href="pages-profile.html"><i class="align-middle me-1" data-feather="user"></i> Profile</a>
		<div class="dropdown-divider"></div>
		<a asp-area="" asp-controller="SenseiJapaneseSchool" asp-action="LogoutGoogle" class="dropdown-item">Log out</a>
	</div>
</li>