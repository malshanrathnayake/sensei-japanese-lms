@model List<SENSEI.WEB.Models.SidebarItem>

@{
	Layout = null;
}

<nav id="sidebar" class="sidebar js-sidebar">
	<div class="sidebar-content js-simplebar">
		<a class="sidebar-brand d-flex align-items-center gap-2" href="@Url.Action("Index", "SenseiJapaneseSchool", new { area = "" })">
			<img src="~/theme/v1/img/photos/logo.PNG" alt="Logo" style="width: 36px; height: 36px; object-fit: contain;" />
			<div class="d-flex flex-column">
				<span class="align-middle" style="font-weight: 900; color: #ff0000; letter-spacing: -0.04em; font-size: 1.15rem; line-height: 1;">SENSEI</span>
				<span class="align-middle" style="font-weight: 700; color: var(--text-muted); font-size: 0.65rem; text-transform: uppercase; letter-spacing: 0.1em; line-height: 1; margin-top: 2px;">Japanese Center <img src="~/theme/v1/img/photos/name.png" alt="Name" style="height: 0.75rem; vertical-align: middle; margin-left: 2px;" /></span>
			</div>
		</a>

		<ul class="sidebar-nav">
			
			@foreach(var item in Model)
			{
				<li class="sidebar-item">
					<a class="sidebar-link" href="@item.Url">
						<i class="align-middle" data-feather="@item.Icon"></i> <span class="align-middle">@item.Title</span>
					</a>
				</li>
			}

		</ul>

