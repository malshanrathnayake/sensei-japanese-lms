@using core_web.Helpers
@{
	ViewData["Title"] = "Course";
}

<div class="container-fluid p-0">

    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1 class="h3 mb-0">Course</h1>

        <button type="button" class="btn btn-primary" id="btnNewCourse" data-action-url="/AdminPortal/Course/Create">
            <i class="fas fa-plus"></i> New
        </button>

    </div>

	<div class="row">
		<div class="col-12">
			<div class="card">
				<div class="card-header">
					<h5 class="card-title mb-0">List of Courses</h5>
				</div>
				<div class="card-body">

					<div id="CourseTableContent" class="table-responsive">

                        <table id="CourseDataTable" class="table table-hover align-middle mb-0 w-100">
                            <thead>
                                <tr>
                                    <th></th>
                                    <th>Course Name</th>
                                    <th>Course Code</th>
                                </tr>
                            </thead>
                            <tbody>
                                
                            </tbody>
                        </table>

                    </div>

				</div>
			</div>
		</div>
	</div>

</div>

@Html.RenderAction("CourseOffCanvas", "Course", new { area = "AdminPortal" })

@section Scripts {

    <script src="~/js/admin-portal/course-function.js"></script>

    <script type="text/javascript">

        $(document).ready(function () {

            loadCourses();

        });

        function loadCourses() {

            if ($.fn.DataTable.isDataTable('#CourseDataTable')) {
                $('#CourseDataTable').DataTable().clear().destroy();
                $('#CourseDataTable tbody').empty();
            }

            $('#CourseDataTable').DataTable({
                processing: true,
                serverSide: true,
                autoWidth: false,
                lengthMenu: [10, 20, 50, 100],
                columnDefs: [
                    { targets: 0, className: 'noVis' },
                    { width: 25, targets: 0, orderable: false },
                ],
                dom:
                    "<'row mb-3'<'col-sm-6'l><'col-sm-6 text-end'f>>" +
                    "<'row'<'col-sm-12'tr>>" +
                    "<'row mt-3'<'col-sm-5'i><'col-sm-7'p>>",
                ajax: {
                    url: '/AdminPortal/Course/ListOfCourses',
                    type: 'POST'
                },
                columns: [
                    {
                        data: null,
                        orderable: false,
                        searchable: false,
                        width: "25px",
                        className: "text-end",
                        render: function (data, type, row) {

                            var editUrl = `/AdminPortal/Course/Edit/?q=${row.encryptedKey}`;
                            var deleteUrl = `/AdminPortal/Course/Delete/?q=${row.encryptedKey}`;

                            var editBtn = `<li><a class="dropdown-item d-flex align-items-center gap-2 edit-course" href="javascript:void(0)" data-action-url="${editUrl}"> <i data-feather="edit"></i><span>Edit</span></a></li>`;
                            var deleteBtn = `<li><a class="dropdown-item d-flex align-items-center gap-2 text-danger delete-course" href="javascript:void(0)" data-action-url="${deleteUrl}" data-action-parameter="${row.courseName}"><i data-feather="trash-2"></i><span>Delete</span></a></li>`;

                            return `
                                <div class="dropdown">
                                    <button class="btn btn-sm btn-light p-1" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        <i data-feather="more-vertical"></i>
                                    </button>

                                    <ul class="dropdown-menu dropdown-menu-end">
                                        ${editBtn}
                                        ${deleteBtn}
                                    </ul>
                                </div>

                            `;
                        }
                    },
                    { data: 'courseName', name:'courseName' },
                    { data: 'courseCode', name:'courseCode' }
                ],
                drawCallback: function () {
                    if (window.feather) {
                        feather.replace();
                    }

                    editCourseButton();
                    deleteCourseButton();
                }
            });

        }

    </script>

}
