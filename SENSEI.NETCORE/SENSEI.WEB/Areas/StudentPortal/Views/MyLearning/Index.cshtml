@{
    ViewData["Title"] = "My Learning";
}

<style>
    .lesson-card {
        border: none;
        border-radius: 15px;
        overflow: hidden;
        transition: all 0.3s ease;
        background: rgba(255, 255, 255, 0.9);
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.05);
        height: 100%;
        position: relative;
    }

    .lesson-card:hover {
        transform: translateY(-10px);
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
    }

    .lesson-image-wrapper {
        position: relative;
        height: 200px;
        overflow: hidden;
    }

    .lesson-image {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.5s ease;
    }

    .lesson-card:hover .lesson-image {
        transform: scale(1.1);
    }

    .lesson-badge {
        position: absolute;
        top: 15px;
        right: 15px;
        padding: 5px 15px;
        border-radius: 20px;
        font-size: 0.8rem;
        font-weight: 700;
        backdrop-filter: blur(5px);
        background: rgba(255, 255, 255, 0.2);
        color: white;
        border: 1px solid rgba(255, 255, 255, 0.3);
    }

    .lesson-content {
        padding: 1.5rem;
    }

    .lesson-title {
        font-size: 1.25rem;
        font-weight: 800;
        margin-bottom: 0.5rem;
        color: #333;
    }

    .lesson-meta {
        font-size: 0.85rem;
        color: #777;
        margin-bottom: 1rem;
        display: flex;
        align-items: center;
        gap: 15px;
    }

    .lesson-meta i {
        color: var(--bs-primary);
    }

    .progress-wrapper {
        margin-top: 1rem;
    }

    .progress {
        height: 8px;
        border-radius: 4px;
        background-color: #eee;
    }

    .progress-bar {
        background: linear-gradient(90deg, var(--bs-primary), #ff6b6b);
        border-radius: 4px;
    }

    .lesson-footer {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-top: 1.5rem;
    }

    .btn-continue {
        padding: 8px 20px;
        border-radius: 10px;
        font-weight: 700;
        transition: all 0.3s ease;
    }

    .btn-continue:hover {
        background-color: var(--bs-primary);
        color: white;
        transform: scale(1.05);
    }

    /* Sakura Theme Accents */
    .sakura-bg {
        background: linear-gradient(135deg, #fff5f7 0%, #ffffff 100%);
    }

    .section-title {
        position: relative;
        display: inline-block;
        margin-bottom: 2rem;
    }

    .section-title::after {
        content: "";
        position: absolute;
        bottom: -10px;
        left: 0;
        width: 50px;
        height: 3px;
        background: var(--bs-primary);
        border-radius: 3px;
    }
</style>

<div class="container-fluid p-0 sakura-bg">
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="h3 mb-3 section-title">My Learning Journey</h1>
            <p class="text-muted">Pick up where you left off and master Japanese step by step.</p>
        </div>
    </div>

    <!-- Filters/Search -->
    <div class="row mb-4">
        <div class="col-md-8 col-xl-9">
            <div class="d-flex gap-2">
                <button class="btn btn-primary active">All Courses</button>
                <button class="btn btn-outline-primary">In Progress</button>
                <button class="btn btn-outline-primary">Completed</button>
            </div>
        </div>
        <div class="col-md-4 col-xl-3">
            <div class="input-group">
                <input type="text" class="form-control" placeholder="Search lessons..." aria-label="Search">
                <button class="btn btn-primary" type="button"><i class="align-middle" data-feather="search"></i></button>
            </div>
        </div>
    </div>

    <!-- Lesson Cards Grid -->
    <div class="row" id="lessonSummary">


        
    </div>



</div>

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function() {
            // Re-initialize feather icons if any were added dynamically (though here they are static)
            if (window.feather) {
                feather.replace();
            }
        });

        $(document).ready(function() {
           loadLessons();
        });

        function loadLessons(start = 0, length = 10, searchValue = "") {
            $.ajax({
                url: "@Url.Action("LessonSummaryView", "MyLearning")",
                type: "GET",
                dataType: "html",
                data: {
                    start: start,
                    length: length,
                    searchValue: searchValue
                },
                success: function (data) {

                    $("#lessonSummary").html(data);

                    if (window.feather) feather.replace();
                },
                error: function (xhr) {
                    console.error("Failed to load lessons", xhr);
                }
            });
        }

    </script>
}
