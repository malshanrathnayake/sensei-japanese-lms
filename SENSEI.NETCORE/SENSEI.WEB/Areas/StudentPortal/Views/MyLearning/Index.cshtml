@{
    ViewData["Title"] = "My Learning";
}

<style>
    .lesson-card {
        border: none;
        border-radius: 15px;
        overflow: hidden;
        transition: all 0.3s ease;
        background: rgba(255, 255, 255, 0.9);
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.05);
        height: 100%;
        position: relative;
    }

    .lesson-card:hover {
        transform: translateY(-10px);
        box-shadow: 0 20px 40px rgba(0, 0, 0, 0.1);
    }

    .lesson-image-wrapper {
        position: relative;
        height: 200px;
        overflow: hidden;
    }

    .lesson-image {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.5s ease;
    }

    .lesson-card:hover .lesson-image {
        transform: scale(1.1);
    }

    .lesson-badge {
        position: absolute;
        top: 15px;
        right: 15px;
        padding: 5px 15px;
        border-radius: 20px;
        font-size: 0.8rem;
        font-weight: 700;
        backdrop-filter: blur(5px);
        background: rgba(255, 255, 255, 0.2);
        color: white;
        border: 1px solid rgba(255, 255, 255, 0.3);
    }

    .lesson-content {
        padding: 1.5rem;
    }

    .lesson-title {
        font-size: 1.25rem;
        font-weight: 800;
        margin-bottom: 0.5rem;
        color: #333;
    }

    .lesson-meta {
        font-size: 0.85rem;
        color: #777;
        margin-bottom: 1rem;
        display: flex;
        align-items: center;
        gap: 15px;
    }

    .lesson-meta i {
        color: var(--bs-primary);
    }

    .progress-wrapper {
        margin-top: 1rem;
    }

    .progress {
        height: 8px;
        border-radius: 4px;
        background-color: #eee;
    }

    .progress-bar {
        background: linear-gradient(90deg, var(--bs-primary), #ff6b6b);
        border-radius: 4px;
    }

    .lesson-footer {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-top: 1.5rem;
    }

    .btn-continue {
        padding: 8px 20px;
        border-radius: 10px;
        font-weight: 700;
        transition: all 0.3s ease;
    }

    .btn-continue:hover {
        background-color: var(--bs-primary);
        color: white;
        transform: scale(1.05);
    }

    /* Sakura Theme Accents */
    .sakura-bg {
        background: linear-gradient(135deg, #fff5f7 0%, #ffffff 100%);
    }

    .section-title {
        position: relative;
        display: inline-block;
        margin-bottom: 2rem;
    }

    .section-title::after {
        content: "";
        position: absolute;
        bottom: -10px;
        left: 0;
        width: 50px;
        height: 3px;
        background: var(--bs-primary);
        border-radius: 3px;
    }
</style>

<div class="container-fluid p-0 sakura-bg">
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="h3 mb-3 section-title">My Learning Journey</h1>
            <p class="text-muted">Pick up where you left off and master Japanese step by step.</p>
        </div>
    </div>

    <!-- Filters/Search -->
    <div class="row mb-4">
        <div class="col-md-8 col-xl-9">
            <div class="d-flex gap-2">
                <button class="btn btn-primary active">All Courses</button>
                <button class="btn btn-outline-primary">In Progress</button>
                <button class="btn btn-outline-primary">Completed</button>
            </div>
        </div>
        <div class="col-md-4 col-xl-3">
            <div class="input-group">
                <input type="text" class="form-control" placeholder="Search lessons..." aria-label="Search">
                <button class="btn btn-primary" type="button"><i class="align-middle" data-feather="search"></i></button>
            </div>
        </div>
    </div>

    <!-- Lesson Cards Grid -->
    <div class="row">
        <!-- Card 1: Fundamental Grammar -->
        <div class="col-12 col-md-6 col-xl-4 mb-4">
            <div class="card lesson-card">
                <div class="lesson-image-wrapper">
                    <img src="~/theme/v1/img/photos/unsplash-1.jpg" alt="Grammar" class="lesson-image">
                    <span class="lesson-badge">JLPT N5</span>
                </div>
                <div class="lesson-content">
                    <h3 class="lesson-title">Fundamental Grammar</h3>
                    <div class="lesson-meta">
                        <span><i class="align-middle me-1" data-feather="book-open"></i> 12 Lessons</span>
                    </div>
                    <p class="text-muted small">Master basic particles and sentence structures essential for daily conversation.</p>
                    <div class="progress-wrapper">
                        <div class="d-flex justify-content-between mb-1 small text-muted">
                            <span>Progress</span>
                            <span>75%</span>
                        </div>
                        <div class="progress">
                            <div class="progress-bar" role="progressbar" style="width: 75%" aria-valuenow="75" aria-valuemin="0" aria-valuemax="100"></div>
                        </div>
                    </div>
                    <div class="lesson-footer">
                        <span class="text-primary fw-bold small">Current: Grammar I</span>
                        <a href="#" class="btn btn-primary btn-continue">Continue <i class="align-middle ms-1" data-feather="arrow-right"></i></a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Card 2: Kanji Master -->
        <div class="col-12 col-md-6 col-xl-4 mb-4">
            <div class="card lesson-card">
                <div class="lesson-image-wrapper">
                    <img src="~/theme/v1/img/photos/unsplash-2.jpg" alt="Kanji" class="lesson-image">
                    <span class="lesson-badge">Kanji Master</span>
                </div>
                <div class="lesson-content">
                    <h3 class="lesson-title">Kanji Level 1: Basics</h3>
                    <div class="lesson-meta">
                        <span><i class="align-middle me-1" data-feather="book-open"></i> 20 Lessons</span>
                    </div>
                    <p class="text-muted small">Learn the first 100 Kanji characters including stroke order and readings.</p>
                    <div class="progress-wrapper">
                        <div class="d-flex justify-content-between mb-1 small text-muted">
                            <span>Progress</span>
                            <span>30%</span>
                        </div>
                        <div class="progress">
                            <div class="progress-bar" role="progressbar" style="width: 30%" aria-valuenow="30" aria-valuemin="0" aria-valuemax="100"></div>
                        </div>
                    </div>
                    <div class="lesson-footer">
                        <span class="text-primary fw-bold small">Current: Kanji Basics</span>
                        <a href="#" class="btn btn-primary btn-continue">Resume <i class="align-middle ms-1" data-feather="arrow-right"></i></a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Card 3: Everyday Speaking -->
        <div class="col-12 col-md-6 col-xl-4 mb-4">
            <div class="card lesson-card">
                <div class="lesson-image-wrapper">
                    <img src="~/theme/v1/img/photos/unsplash-3.jpg" alt="Conversation" class="lesson-image">
                    <span class="lesson-badge">Conversation</span>
                </div>
                <div class="lesson-content">
                    <h3 class="lesson-title">Everyday Speaking</h3>
                    <div class="lesson-meta">
                        <span><i class="align-middle me-1" data-feather="book-open"></i> 10 Lessons</span>
                    </div>
                    <p class="text-muted small">Practical phrases for ordering food, asking for directions, and daily life.</p>
                    <div class="progress-wrapper">
                        <div class="d-flex justify-content-between mb-1 small text-muted">
                            <span>Progress</span>
                            <span>100%</span>
                        </div>
                        <div class="progress">
                            <div class="progress-bar bg-success" role="progressbar" style="width: 100%" aria-valuenow="100" aria-valuemin="0" aria-valuemax="100"></div>
                        </div>
                    </div>
                    <div class="lesson-footer">
                        <span class="text-success fw-bold small"><i class="align-middle me-1" data-feather="check-circle"></i> Completed</span>
                        <a href="#" class="btn btn-outline-primary btn-continue">Review <i class="align-middle ms-1" data-feather="rotate-ccw"></i></a>
                    </div>
                </div>
            </div>
        </div>
    </div>



</div>

@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function() {
            // Re-initialize feather icons if any were added dynamically (though here they are static)
            if (window.feather) {
                feather.replace();
            }
        });
    </script>
}
