@model SENSEI.DOMAIN.Student
@{
    ViewData["Title"] = "My Profile";
}

<div class="container-fluid p-0">
    <div class="row mb-2 mb-xl-3">
        <div class="col-auto d-none d-sm-block">
            <h3><strong>My</strong> Profile</h3>
        </div>

        <div class="col-auto ms-auto text-end mt-n1">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb bg-transparent p-0 mt-1 mb-0">
                    <li class="breadcrumb-item"><a href="@Url.Action("Index", "Home", new { area = "StudentPortal" })">Dashboards</a></li>
                    <li class="breadcrumb-item active" aria-current="page">Profile</li>
                </ol>
            </nav>
        </div>
    </div>

    <div class="row">
        <div class="col-md-4 col-xl-3">
            <div class="card mb-3">
                <div class="card-header">
                    <h5 class="card-title mb-0">Profile Details</h5>
                </div>
                <div class="card-body text-center">
                    <img src="@(Context.Session.GetString("ProfileImage") ?? "/theme/v1/img/avatars/placeholder_1.jpeg")" alt="@(Model?.FirstName ?? "Student")" class="img-fluid rounded-circle mb-2" width="128" height="128" />
                    <h5 class="card-title mb-0">@(Model?.StudentPopulatedName ?? "Student Name")</h5>
                    <div class="text-muted mb-2">@(Model?.IndexNumber ?? "N/A")</div>

                    <div class="mt-2">
                        <span class="badge bg-primary">Student</span>
                    </div>
                </div>
                <hr class="my-0" />
                <div class="card-body">
                    <h5 class="h6 card-title">Information</h5>
                    <ul class="list-unstyled mb-0">
                        <li class="mb-1"><span data-feather="home" class="feather-sm me-1"></span> Branch: @(Model?.Branch?.BranchName ?? "N/A")</li>
                        <li class="mb-1"><span data-feather="briefcase" class="feather-sm me-1"></span> Mode: @(Model?.StudentLearningMode?.LearningModeName ?? "N/A")</li>
                    </ul>
                </div>
            </div>
        </div>

        <div class="col-md-8 col-xl-9">
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">General Information</h5>
                </div>
                <div class="card-body">
                    <form asp-action="UpdateProfile" method="post">
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label" asp-for="FirstName">First Name</label>
                                <input type="text" class="form-control" asp-for="FirstName" placeholder="First name">
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label" asp-for="LastName">Last Name</label>
                                <input type="text" class="form-control" asp-for="LastName" placeholder="Last name">
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label" asp-for="Email">Email</label>
                                <input type="email" class="form-control" asp-for="Email" placeholder="Email" readonly>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label" asp-for="PhoneNo">Phone Number</label>
                                <input type="text" class="form-control" asp-for="PhoneNo" placeholder="Phone number">
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <label class="form-label" asp-for="NIC">NIC</label>
                                <input type="text" class="form-control" asp-for="NIC" placeholder="NIC">
                            </div>
                            <div class="col-md-6 mb-3">
                                <label class="form-label" asp-for="DateOfBirth">Date of Birth</label>
                                <input type="text" class="form-control" value="@Model?.DateOfBirth.ToString("yyyy-MM-dd")" readonly>
                            </div>
                        </div>
                        
                        <div class="text-end">
                             <button type="submit" class="btn btn-primary">Update Profile</button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
